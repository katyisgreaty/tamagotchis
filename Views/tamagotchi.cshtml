<h1>@Model.GetName()</h1>
<p>Food: @Model.GetFood() <form method="post" action="/tamagotchis/food/@Model.GetId()"><button type="submit" name="button">Feed me!</button></form></p>
<p>Attention: @Model.GetAttention() <form method="post" action="/tamagotchis/attention/@Model.GetId()"><button type="submit" name="button">Play with me!</button></form></p>
<p>Rest: @Model.GetRest() <form method="post" action="/tamagotchis/rest/@Model.GetId()"><button type="submit" name="button"> Put me to sleep! Zzzzz!</button></form></p>

@if (@Model.IsDead())
{
  <h1> YOU KILLED IT </h1>
  <img src="https://i2.wp.com/www.safetydifferently.com/wp-content/uploads/2016/06/blame-someone.jpg" alt="photo of blame finger">
}
